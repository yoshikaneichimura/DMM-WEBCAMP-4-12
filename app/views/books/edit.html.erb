<h1>Editing Book</h1>

<%= form_with model: @book,url: edit_book_path(@book.id),method: :patch do |f| %>

<label>Title</label>

<div class="field">

<%= f.text_field :title %>

</div>

<label>Body</label>

<div class="field">

<%= f.text_area :body %>

</div>

<div class="actions">

<%= f.submit 'Update Book'%>

</div>

<%=link_to"Show",book_path(@book.id)%>

|

<%=link_to"Back",books_path%>

<%end%>