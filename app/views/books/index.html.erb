

 <h1>Books</h1>


 <table>



   　<thead>

   　<tr>

   　<th>Title</th>

   　<th>Body</th>

   　<th colspan="3"></th>

   　</tr>

   </thead>

   <tbody>

   <% @books.each do |book| %>

     <tr>

   　<td><%= book.title %></td>

   　<td><%= book.body %></td>

   　<td>

   　<%=link_to"Show",book_path(book.id)%>

   　</td>
   　
   　<td></td>

   　</tr>



   　<%end%>

    </tbody>

 　</table>

 <%= form_with model:@book, url: '/books', method: :post do |f| %>

 <h2>New book</h2>



  <label>Title</label>

  <div class="field">

   <%= f.text_field:title %>

  </div>

  <label>Body</labe>

  <div class="field">

   <%= f.text_area:body %>

  </div>

  <div class="action">

   <%= f.submit"Create Book"%>

  </div>

<%end%>






